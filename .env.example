# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# PostgreSQL Configuration
POSTGRES_DB=eternitydb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangeMe_SecurePassword123!

# JWT Configuration (REQUIRED)
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=REPLACE_WITH_SECURE_KEY_AT_LEAST_64_CHARACTERS_LONG

# Cookie Configuration
COOKIE_SAME_SITE=Strict
COOKIE_SECURE_POLICY=SameAsRequest

# ASP.NET Environment
ASPNETCORE_ENVIRONMENT=Production

# PgAdmin (Optional - for development)
PGADMIN_EMAIL=admin@eternity.local
PGADMIN_PASSWORD=admin123