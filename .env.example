# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# PostgreSQL Configuration
POSTGRES_DB=eternitydb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangeMe_SecurePassword123!

# JWT Configuration (REQUIRED)
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY=REPLACE_WITH_SECURE_KEY_AT_LEAST_64_CHARACTERS_LONG
JWT_ISSUER=EternityAPI
JWT_AUDIENCE=EternityClient
JWT_ACCESS_TOKEN_EXPIRATION=15
JWT_REFRESH_TOKEN_EXPIRATION=7

# Cookie Configuration
COOKIE_ACCESS_TOKEN_NAME=eternity_access_token
COOKIE_REFRESH_TOKEN_NAME=eternity_refresh_token
COOKIE_SAME_SITE=Strict
COOKIE_SECURE_POLICY=SameAsRequest

# ASP.NET Environment
ASPNETCORE_ENVIRONMENT=Production

# Logging
LOG_LEVEL=Information
LOG_LEVEL_ASPNET=Warning

# PgAdmin (Optional - for development)
PGADMIN_EMAIL=admin@eternity.local
PGADMIN_PASSWORD=admin123